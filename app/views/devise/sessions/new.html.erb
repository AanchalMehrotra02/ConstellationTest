
<div class="row">
  <div class="col-md-4">

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "well"}) do |f| %>
    
    <h2>Log in</h2>
    <hr>
    <%= f.input :email %>
    <%= f.input :password %>

    <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end -%>

    <div class="actions">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

  </div>
</div>